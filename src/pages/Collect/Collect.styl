@import "../../stylus/index.styl";

.index{
    background-color:$backc;
}
header{
     height:1rem;
}
.header{
    z-index:100;
    width: 100vw;
    background-color: $primery;
    position: fixed;
    color: $white;
    height:1rem;
    line-height:1rem;
    left:0;
    top: 0;
}
.index-header-left{
    float: left;
   
}
.index-header-left>span{
    margin-left: .5rem;
}

.index .index-header-size{
    font-size: .5rem;
}
.index-header-right{
    float: right;
}
.index-header-right>span{
    margin-right:.5rem;
}
// 抽屉的样式
.am-drawer{
    top:1rem !important;
}
.sideBar{
    background-color $white
    height 100%
    width 6rem
}
.am-drawer-draghandle{
    width: 0px !important;
}
.sideBar-top{
    background-color $primery
    width 100%
    height 1.5rem
    line-height 1.5rem
    padding .1rem 0 .3rem .3rem
    box-sizing border-box
}
.sideBar-top .img-border{
    width 1.5rem
    height 1.5rem
    line-height 1.5rem
    overflow hidden
    border-radius 5rem
    display inline-block 
    background-color $white  
}
.sideBar-top .img-border>img{
    width 100%
}
.sideBar-top>span{
    margin-left .2rem
    line-height 1.5rem
    vertical-align top
    font-size $siz3
    
}
.siderBar-color{
    color $white
}
.sideBar-kind{
    background-color $primery
    padding .6rem .3rem .3rem
    box-sizing border-box
    display flex
    justify-content:space-between
}
.sideBar-kind .shoucang>.iconfont{
    padding-right .4rem
}
.sideBar-kind .shoucang>.siderBar-color{
    font-size $siz3
}
.siderBar-list{
    background-color $backc
    padding  .3rem .3rem 
    box-sizing border-box
}
.siderBar-list>span{
    font-size $siz3
    color $primery
    padding-right .4rem
}